<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

{{#if isOrganizer}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Event:</h3>

    <form class="form new-event-form">
      <div class="form-group">
        <label for="event-name">Event name:</label>
        <input class="form-input" type="text" id="event-name" name="event-name" />
      </div>
      <div class="form-group">
        <label for="event-funding">Number of Volunteers Needed:</label>
        <input class="form-input" type="number" id="event-funding" name="event-funding" />
      </div>
      <div class="form-group">
        <label for="event-desc">Event description:</label>
        <textarea class="form-input" id="event-desc" name="event-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="event-location">Event location:</label>
        <textarea class="form-input" id="event-location" name="event-location"></textarea>
      </div>
      <div class="form-group">  
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>
{{/if}}

{{#if events.length}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Current Events:</h3>

    {{#each events as |event|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/event/{{event.id}}">{{event.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/if}}
