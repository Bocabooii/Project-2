<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="container">
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class="col-md-6">
    <h2>Edit Profile:</h2>
    <form class="form Edit-form">
      <div class="form-group">
        <label for="edit-name">username:</label>
        <input class="form-input" type="text" id="edit-name" />
      </div>
      <div class="form-group">
        <label for="edit-email">email:</label>
        <input class="form-input" type="text" id="edit-email" />
      </div>
      <div class="form-group">
        <label for="edit-password">password:</label>
        <input class="form-input" type="password" id="edit-password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update</button>
      </div>
    </form>
  </div>

{{#if isOrganizer}}
<div class="row mt-4">
  <div class="col-md-6">


    
    <h3>Create a New Event:</h3>

    <form class="form new-event-form">
      <div class="form-group">
        <label for="event-name">Event name:</label>
        <input class="form-input" type="text" id="event-name" name="event-name" />
      </div>
      <div class="form-group">
        <label for="event-volunteers">Number of Volunteers Needed:</label>
        <input class="form-input" type="number" id="event-volunteers" name="event-volunteers" />
      </div>
      <div class="form-group">
        <label for="event-desc">Event description:</label>
        <textarea class="form-input" id="event-desc" name="event-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="event-location">Event location:</label>
        <textarea class="form-input" id="event-location" name="event-location"></textarea>
      </div>
      <div class="form-group">  
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>
{{/if}}

{{#if events.length}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Current Events:</h3>

    {{#each events as |event|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/event/{{event.id}}">{{event.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
{{/if}}
</div>
</body>

</html>